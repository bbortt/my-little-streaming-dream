type Authority {
  created: String!
  lastUpdated: String!
  uuid: String!
  name: String!
}

input AuthorityInput {
  name: String!
}

input AuthorityUpdate {
  uuid: String!
  name: String
}

extend type RootQuery {
  allAuthorities: [Authority]!
}

extend type RootMutation {
  newAuthority(authorityInput: AuthorityInput!): Authority!
  updateAuthority(authorityUpdate: AuthorityUpdate!): Authority!
  deleteAuthority(uuid: String!): String!
}
